#!/bin/bash

# This file is managed by Puppet

# Check if the given database is empty. Should exit with zero if the given database is empty, a non-zero value
# otherwise.

if [ -z "$1" ]; then
  echo "usage: $0 <database>" 1>2&
  exit 1
fi

if [ "$EUID" -ne "0" ]; then
  echo "This script must be run as root." 1>2&
  exit 2
fi

DATABASE="$1"
QUERY="SELECT COUNT(*) FROM pg_stat_user_tables;"

ps cax | grep -q postgres > /dev/null
if [ $? -eq 0 ]; then
  sudo -i -u postgres psql -q --tuples-only --no-align --no-password -c "$QUERY" -d $DATABASE | grep -qw 0
else
  echo "PostgreSQL server not running - check of database ${DATABASE} aborted." 1>2&
  exit 3
fi
